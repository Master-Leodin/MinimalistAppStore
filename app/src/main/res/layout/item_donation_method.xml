<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="top"
    android:orientation="horizontal">

    <!-- Ícone do método -->
    <ImageView
        android:id="@+id/methodIconImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Ícone do método"
        tools:src="@android:drawable/ic_menu_help" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/methodNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="#EAEAEA"
            tools:text="PayPal Email" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/methodValueTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:textColor="#B8B8D1"
                android:textSize="12sp"
                tools:text="leonardo132@gmail.com" />

            <ImageButton
                android:id="@+id/copyButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Copy to clipboard"
                app:srcCompat="@android:drawable/ic_menu_save"
                app:tint="#E94560" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>